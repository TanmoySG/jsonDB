                } 
            },
            "received": {
                "collection_id": "ID of your Collection."
            }
        },
        {
            "_action": "Add Data",
            "method" : "POST",
            "access_path": "{url}/<cluster_id>/<access_token>/add/data",
            "payload": {
                "db_id": "Place your DB ID here.",
                "collection_id": "Place Collection ID here.",
                "data":{
                    "description" : "A dictionary of the data to be added in the same format as schema, otherwise data gets rejected.",
                    "field_name" : "value"
                } 
            },
            "received" : "Confirmation Message"
        },
        {
            "_action": "Update Data",
            "method" : "POST",
            "access_path": "{url}/<cluster_id>/<access_token>/update/data",
            "marker_details" : "Marker is a special field indicating/pointing to the data to be updated. Format marker (exactly) as: 'field : data_value' where key is the field name and value corresponds to a specific data of the field, indicating the data cell to be updated.",
            "payload": {
                "db_id": "Place your DB ID here.",
                "collection_id": "Place Collection ID here.",
                "marker" : "field : data_value",
                "data":{
                    "description" : "A dictionary of the data to be updated in the same format as schema, otherwise data gets rejected.",
                    "field_name" : "value"
                } 
            },
            "received" : "Confirmation Message"
        },
        {
            "_action": "Delete Data",
            "method" : "POST",
